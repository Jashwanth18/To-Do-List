<%- include("header") -%>

<body>
<%- include("flash") -%>
  <div class="box" id="heading">
    <h1  class="list-title"> <%= listTitle %> </h1>
  </div>

  <div class="box">
      <% newList.forEach(function(item){ %>
        <form action="/delete" method="post">
          <div class="item">
              <input type="checkbox" name="checkbox" value="<%=item._id%>" onChange="this.form.submit()">
              <p class="task-name"> <%= item.name %> </p>
          </div>
          <input type="hidden" name="listTitle" value="<%= listTitle %>"></input>
        </form>

      <% }) %>

    <div class="item">
      <form class="item" action="/" method="post">
        <input class="new-item" type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button class="Add-button" type="submit" name="list" value= <%= listTitle %>>+</button>
      </form>
    </div>
  </div>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>

